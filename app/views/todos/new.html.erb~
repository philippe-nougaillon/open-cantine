<h3>Décrivez la fonctionnalité souhaitée</h3>

<%= form_for(@todo) do |f| %>
 
  <% @todo.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
  <% end %>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Enregistrer" %>
  </p>
<% end %>

