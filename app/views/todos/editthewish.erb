<%= form_for(@todo) do |f| %>

  <% @todo.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
  <% end %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @todo %> |
<%= link_to "Delete", @todo, :confirm => "Really??",  :method => :delete %> |
<%= link_to 'Back', todos_path %>
