<h2>Journal des modifications</h2>

<div id="form_actions">
  <%= form_tag request.path, :method => 'get' do %>
    Recherche:
    <%= text_field_tag "search", params[:search] %>
    <%= select_tag "user_id", options_from_collection_for_select(User.find(session[:user]).ville.users, 'id', 'username', params[:user_id]), :include_blank => true %>
    <%= submit_tag 'Ok' %>
  <% end %>
</div>

<div id="form_body">
    <table class="sample">
        <tr>
            <th>Date</th>
            <th>Il y a</th>
            <th>Qui</th>
            <th>Action</th>
            <th>Quoi</th>
            <th>Modifications (champ: valeur avant => valeur apr√®s)</th>
        </tr>
        <% @logs.each do |log| %>
          <tr>
            <td><%= log.created_at.to_s(:fr) %></td>
            <td><%= time_ago_in_words(log.created_at) %></td>
            <td><%= log.user.username %></td>
            <td><%= log.action_name %></td>
            <td><%= log.quoi %></td>
            <td><%= log.msg %></td>
          </tr>
        <% end %>
    </table>
    <%= page_entries_info @logs %>
    <%= will_paginate @logs %>
    <br />
</div>
