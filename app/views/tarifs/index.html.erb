<h3>Liste des tarifs journaliers</h3>

<table>
  <tr>
    <th>Nom</th>
    <th>Repas</th>
    <th>Garderie Matin</th>
    <th>Garderie Après-midi</th>
    <th>Centre Matin</th>
    <th>Centre Après-midi</th>
    <th>Centre Journée</th>
    <th>Etude</th>
    <th></th>	
  </tr>

<% for tarif in @tarifs %>
  <tr>
      <td><%=h tarif.memo %></td>
      <td style="text-align:right"><%=h number_to_currency(tarif.RepasP, :locale => "fr") %></td>
      <td style="text-align:right"><%=h number_to_currency(tarif.GarderieAMP, :locale => "fr") %></td>
      <td style="text-align:right"><%=h number_to_currency(tarif.GarderiePMP, :locale => "fr") %></td>
      <td style="text-align:right"><%=h number_to_currency(tarif.CentreAMP, :locale => "fr") %></td>
      <td style="text-align:right"><%=h number_to_currency(tarif.CentrePMP, :locale => "fr") %></td>
      <td style="text-align:right"><%=h number_to_currency(tarif.CentreAMPMP, :locale => "fr") %></td>
      <td style="text-align:right"><%=h number_to_currency(tarif.Etude, :locale => "fr") %></td>
      <td><%= link_to image_tag('modif.png', size:"15x15"), edit_tarif_path(tarif) %></td>
  </tr>
<% end %>
</table>
