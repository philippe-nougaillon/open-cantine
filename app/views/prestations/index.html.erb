<div id="form_actions">
	<%= form_tag request.path, :method => 'get' do %>
		Du:
	  	<%= text_field_tag('prestation_date', params[:prestation_date], :size => 5) %>
		Classe:
		<%= select_tag "classe", options_from_collection_for_select(@classrooms, "id", "nom", params[:classe]), :include_blank => true %>

		<%= check_box_tag "toutlemois", params[:toutlemois], params[:toutlemois] %> Voir le mois entier ?
		<%= check_box_tag "totaux", params[:totaux], params[:totaux] %> Afficher que les totaux ?

		<%= submit_tag 'Afficher' %>
		<%= submit_tag 'Saisie pointage', name: "pointage" %>

	    <span id="adroite">
		    <%= link_to "Editions", :action => 'editions', :search => params[:prestation_date], 
			:classe => params[:classe], :toutlemois => params[:toutlemois], :id => 0 %>
	
	    </span>
	<% end %>
</div>

<div class="span-24 last">
    <%= render :partial => "list", :locals => { :prestations => @prestations } %>
</div>
  

