        </tr>
      <% end %>
      <tr>
        <td><b>Total Repas Enfants</b></td>
        <td></td>
        <td></td>
        <td></td>
        <td class="center">
            <b><%= sprintf("%3d", (total_repasEnfant)) %></b>
            <% if total_repasEnfantSP > 0 %>
               (dont <%= sprintf("%2d", (total_repasEnfantSP)) %> ss porc)
            <% end%>
            <% if total_repasEnfantALG > 0 %>
               (dont <%= sprintf("%2d", (total_repasEnfantALG)) %> ALLERGIES)
            <% end%>
        </td>
        <td></td>
        <td></td>
