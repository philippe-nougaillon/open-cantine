    <% total_repasAdulte = 0 %>
    <% total_repasAdulteSP = 0 %>
    <% total_repasAdulteALG = 0 %>

    <% total_garderieAMP = 0 %>
    <% total_garderieAMA = 0 %>
    <% total_garderieAMM = 0 %>

    <% total_garderiePMP = 0 %>
    <% total_garderiePMA = 0 %>
    <% total_garderiePMM = 0 %>

    <% total_centreAMP = 0 %>
    <% total_centreAMA = 0 %>
    <% total_centreAMM = 0 %>

