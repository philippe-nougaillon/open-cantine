<table class="sample">
  <tr>
    <th>Date</th><th>Type</th><th>Référence</th><th>Débit</th><th>Crédit</th><th>Solde</th><th />
  </tr>
  <% for l in @releve.sort { |a,b| a[:date] <=> b[:date] } %>
     <tr>
        <td><%= l[:date].to_s(:fr) %></td>
        <td><%= l[:type] %></td>
        <td><%= l[:ref]  %></td>
	<% @montant = l[:mnt] || 0 %>
        <% if l[:type] == "Facture" %>
           <% @solde -= @montant %>
           <% @debit += @montant %>
           <td id="number"> <%= number_to_currency(@montant, :unit => "")  %> € </td><td></td>
           <td id="number"> <%= number_to_currency(@solde, :unit => "") %> € </td>
           <td><%= link_to "Afficher", :controller => "factures", :action => 'print', :id => l[:id] %></td>	
        <% else %>
           <% @solde += @montant %>
           <% @credit += @montant %>
           <td></td><td id="number"> <%= number_to_currency(@montant, :unit => "") %> € </td>
           <td id="number"> <%= number_to_currency(@solde, :unit => "") %> € </td>
           <td><%= link_to "Afficher", :controller => "paiements", :action => 'show', :id => l[:id] %></td>	
       <% end %>
     </tr>
  <% end %>
  <tr /><tr />
  <tr style="background-color:#FFFFA0;">
    <td><%= Date.today.to_s(:fr) %></td>
    <td /><td />
    <td id="number"><%= number_to_currency(@debit, :unit => "") %> € </td>
    <td id="number"><%= number_to_currency(@credit, :unit => "") %> € </td>
    <td id="sum">   <%= number_to_currency(@solde, :unit => "") %> € </td>
  </tr>
